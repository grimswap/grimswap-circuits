{
  "name": "@grimswap/circuits",
  "version": "1.2.0",
  "description": "Groth16 ZK-SNARK circuits for GrimSwap - Poseidon Merkle tree proofs and nullifier verification for private Uniswap v4 swaps",
  "main": "dist/sdk/index.js",
  "types": "dist/sdk/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sdk/index.js",
      "require": "./dist/sdk/index.js",
      "types": "./dist/sdk/index.d.ts"
    }
  },
  "bin": {
    "grimswap-copy-circuits": "bin/copy-circuits.js"
  },
  "files": [
    "dist",
    "bin",
    "build/privateSwap_js",
    "build/privateSwap.zkey",
    "setup/verification_key.json"
  ],
  "scripts": {
    "compile": "./scripts/compile.sh",
    "setup": "./scripts/setup.sh",
    "generate-verifier": "./scripts/generateVerifier.sh",
    "test:proof": "./scripts/testProof.sh",
    "test": "mocha test/*.test.js --timeout 100000",
    "build:circuits": "npm run compile && npm run setup && npm run generate-verifier",
    "build:sdk": "tsc",
    "build": "npm run build:sdk"
  },
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "ethers": "^6.9.0",
    "snarkjs": "^0.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "circom_tester": "^0.0.19",
    "mocha": "^10.2.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "zk-snark",
    "groth16",
    "circom",
    "poseidon",
    "merkle-tree",
    "nullifier",
    "stealth-address",
    "erc-5564",
    "privacy",
    "uniswap",
    "v4",
    "defi",
    "zero-knowledge",
    "tornado-cash",
    "grimswap"
  ],
  "author": "GrimSwap",
  "license": "MIT"
}
